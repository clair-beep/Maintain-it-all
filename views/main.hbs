<h6>Pending list </h6>
<h3>Welcome {{name}}</h3>
<p>Here are your pending tasks</p>
{{#if tasks}}
        <table class="striped">
        <thead>
            <tr> 
                <th>Date</th>
                <th>Task</th>
               
            </tr>
        </thead>
        <tbody>
            {{#each tasks}}
                <tr>
                    <td>{{createdAt}}</td>
                    <td><a href="/tasks/{{_id}}">{{{body}}}</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You do not have any pending tasks. Add one now!</p>
{{/if}}